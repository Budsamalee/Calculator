<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    tools:context="com.jena.calculator.MainActivity">

    <TextView
        android:id="@+id/TV1"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layout_constraintTop_toBottomOf="@id/TV2"
        android:textSize="40dp"
        android:textColor="#4dffff"
        android:background="#262626"
        />

    <TextView
        android:id="@+id/TV2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="40dp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/B1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="1"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#ffd699"
        app:layout_constraintRight_toLeftOf="@id/B2"
        app:layout_constraintTop_toBottomOf="@id/TV1"
        />

    <Button
        android:id="@+id/B2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="2"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#ffd699"
        app:layout_constraintLeft_toRightOf="@id/B1"
        app:layout_constraintTop_toBottomOf="@id/TV1"
        />

    <Button
        android:id="@+id/B3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="3"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#ffd699"
        app:layout_constraintLeft_toRightOf="@id/B2"
        app:layout_constraintTop_toBottomOf="@id/TV1"
        />

    <Button
        android:id="@+id/B4"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="4"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#ffebcc"
        app:layout_constraintTop_toBottomOf="@id/B1"
        />

    <Button
        android:id="@+id/B5"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="5"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#ffebcc"
        app:layout_constraintTop_toBottomOf="@id/B2"
        app:layout_constraintLeft_toRightOf="@id/B4"
        />

    <Button
        android:id="@+id/B6"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="6"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#ffebcc"
        app:layout_constraintTop_toBottomOf="@id/B3"
        app:layout_constraintLeft_toRightOf="@id/B5"
        />

    <Button
        android:id="@+id/B7"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="7"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#fff5e6"
        app:layout_constraintTop_toBottomOf="@id/B4"
        />

    <Button
        android:id="@+id/B8"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="8"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#fff5e6"
        app:layout_constraintTop_toBottomOf="@id/B5"
        app:layout_constraintLeft_toRightOf="@id/B7"
        />

    <Button
        android:id="@+id/B9"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="9"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#fff5e6"
        app:layout_constraintTop_toBottomOf="@id/B6"
        app:layout_constraintLeft_toRightOf="@id/B8"
        />

    <Button
        android:id="@+id/B0"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#94b8b8"
        android:fontFamily="monospace"
        android:text="0"
        android:textSize="35dp"
        app:layout_constraintLeft_toRightOf="@id/B10"
        app:layout_constraintTop_toBottomOf="@id/B8" />

    <Button
        android:id="@+id/B10"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="="
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#80dfff"
        app:layout_constraintTop_toBottomOf="@id/B7"
        />

    <Button
        android:id="@+id/B11"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="."
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background="#80dfff"
        app:layout_constraintTop_toBottomOf="@id/B9"
        app:layout_constraintLeft_toRightOf="@id/B0"
        />

    <Button
        android:id="@+id/B12"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background=" #ff9900"
        android:textColor="#F8F8FF"
        app:layout_constraintLeft_toRightOf="@id/B3"
        app:layout_constraintTop_toBottomOf="@id/TV1"
        />

    <Button
        android:id="@+id/B13"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:background=" #ff9900"
        android:fontFamily="monospace"
        android:text="-"
        android:textColor="#F8F8FF"
        android:textSize="35dp"
        app:layout_constraintLeft_toRightOf="@id/B6"
        app:layout_constraintTop_toBottomOf="@id/B12" />

    <Button
        android:id="@+id/B14"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:text="X"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background=" #ff9900"
        android:textColor="#F8F8FF"
        app:layout_constraintLeft_toRightOf="@id/B9"
        app:layout_constraintTop_toBottomOf="@id/B13"
        />

    <Button
        android:id="@+id/B15"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:text="/"
        android:textSize="35dp"
        android:fontFamily="monospace"
        android:background=" #ff9900"
        android:textColor="#F8F8FF"
        app:layout_constraintLeft_toRightOf="@id/B11"
        app:layout_constraintTop_toBottomOf="@id/B14"
        />

    <Button
        android:id="@+id/B16"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#FF3030"
        android:fontFamily="monospace"
        android:text="C"
        android:textStyle="bold"
        android:textColor="#F8F8FF"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B0" />

</android.support.constraint.ConstraintLayout>
